<h1><%= @list.name %></h1>
<% @list.bookmarks.each do |bookmark| %>
  <h3><%= bookmark.movie.title %></h3>
  <p><%= bookmark.comment %></p>
        <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
<% end %>
<br>
<%= link_to "Add a film to this list", new_list_bookmark_path(@list.id) %>
<br>
<%= link_to 'Back to all lists', lists_path %>
