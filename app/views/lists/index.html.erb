<div class="hero-image">
  <%= image_tag "banner.jpg", alt: "picture of a cinema", class: "hero" %>
  <div class="hero-text">
    <div class="text-shadow">
      <h1>Ones to <span id="banner-typed-text"></span></h1>
      <p>Create lists of your favourite films</p>
    </div>
    <div class="btn btn-success create"><%= link_to "Make a list", new_list_path %></div>
  </div>
</div>

<div class="d-flex justify-content-around card-wrapper">
<% @lists.each do |list| %>
<div class="card px-3 m-3" style="width: 18rem;">
  <div class="card-body">
    <h4 class="card-title"><%= link_to list.name, list_path(list.id) %></h4>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <div class="btn btn-light"><%= link_to 'View this list', list_path(list.id)%></a>
  </div>
</div>
</div>
<% end %>
</div>
